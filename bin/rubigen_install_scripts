require 'rubygems'
require 'rubigen'

if %w(-v --version).include? ARGV.first
  require 'newgem/version'
  puts "#{File.basename($0)} #{Newgem::VERSION::STRING}"
  exit(0)
end

require 'rubigen/scripts/generate'
RubiGen::Base.use_application_sources! :rubigen_install_scripts
RubiGen::Scripts::Generate.new.run(ARGV, :generator => 'rubigen_install_scripts')
